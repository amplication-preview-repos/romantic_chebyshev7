datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Image {
  createdAt     DateTime       @default(now())
  detectedFaces DetectedFace[]
  file          Json?
  fileName      String?
  id            String         @id @default(cuid())
  updatedAt     DateTime       @updatedAt
  uploadDate    DateTime?
}

model DetectedFace {
  boundingBox     Json?
  createdAt       DateTime         @default(now())
  detectionDate   DateTime?
  id              String           @id @default(cuid())
  image           Image?           @relation(fields: [imageId], references: [id])
  imageId         String?
  recognizedFaces RecognizedFace[]
  updatedAt       DateTime         @updatedAt
  video           Video?           @relation(fields: [videoId], references: [id])
  videoId         String?
}

model Video {
  createdAt     DateTime       @default(now())
  detectedFaces DetectedFace[]
  file          Json?
  fileName      String?
  id            String         @id @default(cuid())
  updatedAt     DateTime       @updatedAt
  uploadDate    DateTime?
}

model RecognizedFace {
  createdAt        DateTime      @default(now())
  detectedFace     DetectedFace? @relation(fields: [detectedFaceId], references: [id])
  detectedFaceId   String?
  id               String        @id @default(cuid())
  personId         String?
  recognitionDate  DateTime?
  recognitionScore Float?
  updatedAt        DateTime      @updatedAt
}
